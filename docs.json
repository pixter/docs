{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Documentação Sinerlog",
  "colors": {
    "primary": "#00535C",
    "light": "#07C983",
    "dark": "#00363A"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guias",
        "groups": [
          {
            "group": "Comece por aqui",
            "pages": [
              "introduction",
              "architecture",
              "technologies",
              "development",
              "components",
              "features",
              "deploy"
            ]
          },
          {
            "group": "Customização",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Escrevendo conteúdo",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "Ferramentas de IA",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Referência da API",
        "groups": [
          {
            "group": "Documentação da API",
            "pages": [
              "api-reference/introduction",
              "api-reference/architecture",
              "api-reference/technologies",
              "api-reference/development",
              "api-reference/components",
              "api-reference/features",
              "api-reference/deploy"
            ]
          },
          {
            "group": "Exemplos de endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentação",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Comunidade",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Suporte",
        "href": "mailto:suporte@sinerlog.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Painel Sinerlog",
      "href": "https://dashboard.sinerlog.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/sinerlog",
      "github": "https://github.com/sinerlog",
      "linkedin": "https://linkedin.com/company/sinerlog"
    }
  }
}
